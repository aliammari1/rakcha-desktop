                                    style="-fx-text-fill: #cccccc;
                                           -fx-font-family: 'Arial';
                                           -fx-font-size: 13px;
                                           -fx-font-weight: bold;" />
                                <StackPane>
                                    <Rectangle width="315" height="50"
                                        style="-fx-fill: linear-gradient(to bottom, rgba(40, 40, 40, 0.8), rgba(20, 20, 20, 0.9));
                                               -fx-stroke: #8b0000;
                                               -fx-stroke-width: 1;
                                               -fx-background-radius: 12;
                                               -fx-stroke-radius: 12;
                                               -fx-effect: dropshadow(gaussian, rgba(139, 0, 0, 0.3), 8, 0, 0, 0);" />
                                    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 20 0 20;">
                                        <FontIcon iconLiteral="fa-calendar" iconSize="16"
                                            style="-fx-icon-color: #8b0000;" />
                                        <DatePicker fx:id="dateDeNaissanceDatePicker"
                                            promptText="Select date of birth"
                                            style="-fx-background-color: transparent;
                                                   -fx-text-fill: white;
                                                   -fx-font-family: 'Arial';
                                                   -fx-font-size: 14px;
                                                   -fx-border-color: transparent;
                                                   -fx-background-radius: 0;
                                                   -fx-focus-color: transparent;
                                                   -fx-faint-focus-color: transparent;"
                                            maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </StackPane>
                            </VBox>
                        </HBox>
                        
                        <!-- Address -->
                        <VBox spacing="8">
                            <Label text="Address"
                                style="-fx-text-fill: #cccccc;
                                       -fx-font-family: 'Arial';
                                       -fx-font-size: 13px;
                                       -fx-font-weight: bold;" />
                            <StackPane>
                                <Rectangle width="650" height="50"
                                    style="-fx-fill: linear-gradient(to bottom, rgba(40, 40, 40, 0.8), rgba(20, 20, 20, 0.9));
                                           -fx-stroke: #8b0000;
                                           -fx-stroke-width: 1;
                                           -fx-background-radius: 12;
                                           -fx-stroke-radius: 12;
                                           -fx-effect: dropshadow(gaussian, rgba(139, 0, 0, 0.3), 8, 0, 0, 0);" />
                                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 20 0 20;">
                                    <FontIcon iconLiteral="fa-map-marker" iconSize="16"
                                        style="-fx-icon-color: #8b0000;" />
                                    <TextField fx:id="adresseTextField"
                                        promptText="Your address"
                                        style="-fx-background-color: transparent;
