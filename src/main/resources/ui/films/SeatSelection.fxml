<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esprit.controllers.films.SeatSelectionController"
            prefHeight="800.0" prefWidth="1000.0">
    <children>
        <Label layoutX="20" layoutY="20" text="Select your seats:" style="-fx-font-size: 20px;"/>
        <GridPane fx:id="seatGrid" layoutX="50" layoutY="60" hgap="5" vgap="5"/>
        <Button fx:id="confirmButton" layoutX="400" layoutY="700" text="Confirm Selection" 
                onAction="#confirmSelection" styleClass="primary-button"/>
    </children>
</AnchorPane>
